html
    head
        title #{network.graph.name}
        script(type="text/javascript", src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.0/jquery.min.js")
        script(type="text/javascript", src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js")
